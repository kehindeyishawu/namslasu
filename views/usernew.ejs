                    </div>
                </div>
            </div>
		</section>
		
		<!-- flash message -->
		<% if(error && error.length>0) { %>
                <div class="alert alert-danger text-center mb-0" role="alert">
                   <%= error %>
                </div>
              <% } %>
              <% if(success && success.length>0) { %>
                <div class="alert alert-success text-center mb-0" role="alert">
                     <%= success %>
                </div>
              <% } %>
		
		<!-- forms create account -->
		<div class="form-size-lg">
			<h2 class="text-center">
				Create Account
			</h2>
			<form class="border p-3 shadow-sm rounded" action="/signup" method="post">
			  <div class="form-row">
				<div class="form-group col-md-6">
				  <label for="firstname">First Name</label>
				  <input type="text" class="form-control" name="firstname" id="firstname" placeholder="Sasuke">
				</div>
				<div class="form-group col-md-6">
				  <label for="lastname">Last Name</label>
				  <input type="text" class="form-control" name="lastname" id="lastname" placeholder="Uchiha">
				</div>
			  </div>
			  <div class="form-group">
				<label for="email">Email</label>
				<input type="email" class="form-control" name="username" id="email" placeholder="sasuke@gmail.com">
			  </div>
			  <div class="form-row">
				<div class="form-group col-md-6">
					<label for="matric">Matric NO</label>
					<input type="text" class="form-control" name="matric" id="matric" placeholder="Place your matric number">
			  	</div>
				<div class="form-group col-md-6">
					<label for="phone">Phone NO</label>
					<input type="text" class="form-control" name="phone" id="phone" placeholder="080 xxx xxxx ">
			  	</div>
			  </div>
			  <div class="form-row">
				<div class="form-group col-md-6">
				  <label for="password">Password</label>
				  <input type="password" class="form-control" name="password" id="password" placeholder="">
				</div>
				<div class="form-group col-md-6">
				  <label for="confirmpassword">Confirm Password</label>
				  <input type="confirmpassword" class="form-control" id="confirmpassword" placeholder="">
				</div>
			  </div>
			  
			  <p>By creating an account, you agree that we are allowed to contact you via email if needed</p>
			  <button type="submit" class="btn btn-info">Create Account</button>
			</form>
		</div>
		
		<!-- footer -->
		<footer id="footer-straight" class="mt-5 py-3">
			<div class="container">
				<p class="border-bottom">Courtesy of The Executives 2019/2020 Academic Session</p>
